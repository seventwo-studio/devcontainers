{
  "id": "mise-en-place",
  "version": "2.3.3",
  "name": "mise-en-place",
  "description": "Installs mise (formerly rtx) - a fast polyglot runtime manager",
  "documentationURL": "https://github.com/seventwo-studio/devcontainers/tree/main/features/src/mise-en-place",
  "licenseURL": "https://github.com/seventwo-studio/devcontainers/blob/main/LICENSE",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "Version of mise to install (e.g., 'latest', '2024.1.0')"
    },
    "autoTrust": {
      "type": "boolean",
      "default": true,
      "description": "Automatically trust workspace directories on initialization"
    },
    "installNodeLTS": {
      "type": "boolean",
      "default": true,
      "description": "Install Node.js LTS globally via mise"
    },
    "installBun": {
      "type": "boolean",
      "default": true,
      "description": "Install Bun globally via mise"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "jdx.mise-vscode"
      ]
    }
  }
}