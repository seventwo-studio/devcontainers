{
	"id": "seventwo-motd",
	"version": "1.0.0",
	"name": "SevenTwo MOTD",
	"documentationURL": "https://github.com/seventwo-studio/devcontainers/tree/main/features/src/seventwo-motd",
	"description": "Adds SevenTwo ASCII MOTD (Message of the Day) with customizable message",
	"options": {
		"message": {
			"type": "string",
			"default": "Happy coding!",
			"description": "Custom message to display"
		},
		"enable": {
			"type": "boolean",
			"default": true,
			"description": "Enable or disable the MOTD display"
		}
	},
	"installsAfter": ["ghcr.io/seventwo-studio/features/modern-shell"],
	"dependsOn": {
		"ghcr.io/seventwo-studio/features/modern-shell": {}
	}
}
