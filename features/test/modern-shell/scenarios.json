{
	"default": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {}
		}
	},
	"all-enabled": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {
				"zsh_default": true,
				"auto_cd": true,
				"zoxide_cd": true,
				"starship": true,
				"custom_aliases": "g='git status';dc='docker compose';k='kubectl'",
				"shell_history_size": "20000",
				"alias_ls": true,
				"alias_cat": true,
				"alias_find": true,
				"alias_grep": true
			}
		}
	},
	"all-disabled": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {
				"zsh_default": false,
				"auto_cd": false,
				"zoxide_cd": false,
				"starship": false,
				"alias_ls": false,
				"alias_cat": false,
				"alias_find": false,
				"alias_grep": false
			}
		}
	},
	"zsh-plugins-none": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {
				"zsh_plugins": "none"
			}
		}
	},
	"zsh-plugins-minimal": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {
				"zsh_plugins": "minimal"
			}
		}
	},
	"zsh-plugins-full": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {
				"zsh_plugins": "full"
			}
		}
	},
	"completions-disabled": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {
				"enable_completions": false
			}
		}
	},
	"neovim-disabled": {
		"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
		"features": {
			"ghcr.io/seventwo-studio/features/modern-shell": {
				"install_neovim": false
			}
		}
	}
}
